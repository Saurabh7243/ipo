<link rel="stylesheet" href="/public/css/forms/forms.css" type="text/css">
<button
  type="button"
  class="btn btn-primary btn-sm"
  data-toggle="modal"
  data-target="#addIpoData"
>
  Add Ipo
</button>

<div
  class="modal fade"
  id="addIpoData"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="myModalLabel">Fill IPO Data</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/ipo/add" method="POST">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="companyName">Company Name <span class="text-danger" style="font-size: 1.50rem;">*</span></label>
                <input
                  name="companyName"
                  type="text"
                  class="form-control"
                  id="companyName"
                  placeholder="Enter company name"
                  required
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="displayName">Display Name <span class="text-danger" style="font-size: 1.50rem;">*</span></label>
                <label class="ml-auto" style="font-size: small; margin-top: 1.2%;" onclick="getDisplayNameFromCompanyName()">
                  <i class="fa fa-sync" style="border: none; color: blue; cursor: pointer;"></i>
                </label>
                <input
                  name="displayName"
                  type="text"
                  class="form-control"
                  id="displayName"
                  placeholder="Enter display name"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="urlName">Url Name 
                  <span class="text-danger" style="font-size: 1.50rem;">*</span>
                </label>
                <label class="ml-auto" style="font-size: small; margin-top: 1.2%;" onclick="getUrlFromDisplayName()">
                  <i class="fa fa-sync" style="border: none; color: blue; cursor: pointer;"></i>
                </label>
                <input
                  name="urlName"
                  type="text"
                  class="form-control"
                  id="urlName"
                  placeholder="Enter url name"
                  required
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="symbols">Symbols</label>
                <input
                  name="symbols"
                  type="text"
                  class="form-control"
                  id="symbols"
                  placeholder="Enter symbols"
                />
              </div>
            </div>
          </div>

          <div class="row">          
            <div class="col-md-6">
              <div class="form-group">
                <label for="type">Type</label>
                <select name="type" class="form-control" id="type">
                  <option selected value="1">Mainline</option>
                  <option value="2">SME</option>
                </select>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="inversterId">Inverster Id</label>
                <input
                  name="inversterId"
                  type="number"
                  class="form-control"
                  placeholder="Enter inverster Id"
                />
              </div>
            </div>
            
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="exchanged">Exchanged</label>
                <select name="exchanged" class="form-control" id="exchanged">                  
                  <option selected value="1">NSE</option>
                  <option value="2">BSE</option>
                  <option value="3">BOTH</option>
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="chittorName">Chittor Name</label>
                <input
                  name="chittorName"
                  type="text"
                  class="form-control"
                  id="chittorName"
                  placeholder="Enter chittor name"
                />
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="bseid">Bse Id </label>
                <input
                  name="bseid"
                  type="number"
                  class="form-control"
                  placeholder="Enter chittor id"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="chittorId">Chittor Id</label>
                <input
                  name="chittorId"
                  type="number"
                  class="form-control"
                  placeholder="Enter chittor id"
                />
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="premiumId">Premium Id</label>
                <input name="premiumId" type="number" class="form-control" placeholder="Enter premium id" />
              </div>
            </div>            
            <div class="col-md-6">
              <div class="form-group">
                <label>Retail Quota</label>
                <select name="RetailQuota" class="form-control">
                  <option selected value="1">35 %</option>
                  <option value="2">10 %</option>
                </select>
              </div>
          </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="premiumId">Issue Type</label>
                <select name="IssueType" class="form-control">
                  <option selected value="1">IPO</option>
                  <option value="2">FPO</option>
                </select>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <label for="chittorId">Ipo Type</label>
                <select name="IpoType" class="form-control" id="IpoType">
                  <option selected value="1">Book built issue</option>
                  <option value="2">Fixed price issue</option>
                </select>
              </div>
            </div>

          </div>
          
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function getUrlFromDisplayName() {
    
    var getValue = document.getElementById('displayName').value
    getValue = getValue.replace(/\s+/g, '-').toLowerCase();
    getValue = getValue.concat('-ipo')

    document.getElementById('urlName').value = getValue;
  }

  function getDisplayNameFromCompanyName() {
    
    var getValue = document.getElementById('companyName').value

    getValue = getValue.replace('Limited', '').trim()
    document.getElementById('displayName').value = getValue;
  }

</script>